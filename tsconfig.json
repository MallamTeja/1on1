{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./frontend/*", "./*"],
      "@/backend/*": ["./backend/*"],
      "@/components/*": ["./components/*"]
    }
  },
  "include": ["next-env.d.ts", "frontend/**/*.ts", "frontend/**/*.tsx", "backend/**/*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
